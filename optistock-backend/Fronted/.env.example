# Configuración de la aplicación OPTISTOCK Frontend

# URL de la API del backend
VITE_API_URL=http://localhost:4000/api

# Configuración de desarrollo
VITE_NODE_ENV=development

# Configuración de debug (opcional)
VITE_DEBUG=true

# Configuración del chatbot IA
VITE_CHATBOT_ENABLED=true
VITE_CHATBOT_MAX_MESSAGES=50

# Configuración de la aplicación
VITE_APP_NAME=OptiStock
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Sistema de Gestión de Inventarios con IA

# Configuración de timeout para peticiones HTTP (en milisegundos)
VITE_API_TIMEOUT=10000

# Configuración de aplicación
VITE_APP_NAME=OPTISTOCK
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Sistema de gestión de inventario inteligente

# Configuración de características (opcional)
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=false

# Configuración de URLs externas (opcional)
VITE_SUPPORT_URL=mailto:support@optistock.com
VITE_DOCS_URL=https://docs.optistock.com
VITE_GITHUB_URL=https://github.com/usuario/optistock
